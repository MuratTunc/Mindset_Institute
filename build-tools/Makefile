# Environment file and variables
ENV_FILE := .env

## up_build: Stops and removes all running containers, builds the project and starts docker-compose
build: stop_all_containers down build_customer_service
	echo "ğŸš€ Building (when required) and starting docker images with environment variables..."
	docker-compose up --build -d
	echo "âœ… Docker images built and started!"
	echo "ğŸ“œ Fetching logs for all services..."
	docker-compose logs --tail=50
	echo "ğŸš€ Runnig Containers:"
	docker ps

## stop_all_containers: Stops and removes all running Docker containers (if any exist)
stop_all_containers:
	echo "ğŸ” Checking for running containers..."
	@if [ -n "$$(docker ps -q)" ]; then \
		echo "ğŸ›‘ Stopping all running Docker containers..."; \
		docker stop $$(docker ps -q); \
		echo "ğŸ—‘ï¸ Removing all stopped containers..."; \
		docker rm $$(docker ps -aq); \
		echo "âœ… All containers stopped and removed."; \
	else \
		echo "âš¡ No running containers found. Skipping stop and remove."; \
	fi

## down: stop docker-compose
down:
	echo "ğŸ›‘ Stopping docker-compose..."
	docker-compose down
	echo "âœ… Done!"

## build_customer_service: Builds the customer-service binary as a Linux executable
build_customer_service:
	echo "ğŸš€ Building customer-service binary..."
	@set -a; . ./$(ENV_FILE); set +a; \
	cd ../customer-service && $$GOFULLPATH build -o $$CUSTOMER_SERVICE_BINARY ./cmd/api
	echo "âœ… Done!"

## logs: Shows logs from all services
logs:
	echo "ğŸ“œ Fetching last 50 logs for all services..."
	docker-compose logs --tail=50 -f

## help: Displays the list of available commands
help:
	@grep -E '^##' $(MAKEFILE_LIST) | sed -e 's/## //'